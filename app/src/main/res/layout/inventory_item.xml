<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <ImageView
        android:id="@+id/iV_inventory_base_rarity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_button_background"
        android:src="@drawable/item_to_inventory"/>

    <ImageView
        android:id="@+id/iV_inventory_rare_rarity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_button_rare_background"
        android:src="@drawable/item_to_inventory"/>

    <ImageView
        android:id="@+id/iV_inventory_epic_rarity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_button_epic_background"
        android:src="@drawable/item_to_inventory"/>

    <ImageView
        android:id="@+id/iV_inventory_legend_rarity"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circular_button_legend_background"
        android:src="@drawable/item_to_inventory"/>

</RelativeLayout>
